{% extends '@PositibeOrmBlock/Block/block_base.html.twig' %}

{% block block %}
    {% for content in contents %}
        {% set page = content %}
        <a href="{{ path(page) }}" class="content-title">{{ page.title|raw }}</a>
        <p class="content-body">{{ page.body | raw | striptags | truncate(150) }}</p>
        <hr>
    {% endfor %}
{% endblock %}
